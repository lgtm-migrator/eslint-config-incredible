{
    "extends": [
        "incredible"
    ],
    "rules": {
        "no-magic-numbers"               : [ "error", {
            "ignore"              : [ -1, 0, 1, 2, 1024, 60, 24 ],
            "ignoreDefaultValues" : true,
            "enforceConst"        : true
        } ]
    }
}
